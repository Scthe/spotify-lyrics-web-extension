{
  "manifest_version": 2,
  "name": "react-es6-popup-example",
  "description": "Altering HTTP responses",
  "version": "1.0",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/http-response",
  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png"
  },

  "content_security_policy": "script-src 'self' https://accounts.spotify.com; object-src 'self'",


  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "images/icon-48.png",
      "96": "images/icon-96.png"
    },
    "default_title": "React Example",
    "default_popup": "popup.html"
  },

  "applications": {
    "gecko": {
      "id": "spotify-lyrics-web-ext@example.com",
      "strict_min_version": "42.0"
    }
  },

  "permissions": [
    "activeTab",
    "identity",
    "storage",
    "*://accounts.spotify.com/*",
    "*://www.google.com/search*",
    "*://genius.com/*",
    "*://www.musixmatch.com/*"
  ]
}
